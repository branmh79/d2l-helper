{
  "manifest_version": 3,
  "name": "Brightspace Helper â€“ Phase 1",
  "version": "0.1.1",
  "description": "Hover over a course card to see the current grade (UNG Brightspace).",
  "permissions": ["storage"],
  "host_permissions": [
    "https://ung.view.usg.edu/*",
    "https://*.view.usg.edu/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://ung.view.usg.edu/*",
        "https://*.view.usg.edu/*"
      ],
      "all_frames": true,
      "match_about_blank": true,
      "run_at": "document_idle",
      "js": ["src/content.js"],
      "css": ["src/styles.css"]
    }
  ],
  "options_page": "options/options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
